@model Application.DTO_s.UpdateRoleDTO

@{
    ViewData["Title"] = "Update Role";
}

<h1>Update Role</h1>

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label>Name</label>
            <input type="text" id="roleName" class="form-control" value="@Model.Name" />
        </div>

        <div class="form-group">
            <label>
                <input type="checkbox" id="isActive" @(Model.IsActive ? "checked" : "") />
                Active
            </label>
        </div>

        <input type="hidden" id="roleId" value="@Model.Id" />

        <button id="saveRoleBtn" class="btn btn-primary">Save</button>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#saveRoleBtn").click(function () {
            const role = {
                id: $("#roleId").val(),
                name: $("#roleName").val(),
                isActive: $("#isActive").is(":checked")
            };

            $.ajax({
                url: "/Role/SaveUpdate",
                type: "POST",
                contentType: "application/json",
                dataType: "json", 
                data: JSON.stringify(role),
                success: function (response) {
                    alert(response.message);
                    window.location.href = "/Role/GetRoles"; 
                },
                error: function () {
                    alert("Error updating role.");
                }
            });
        });
    });
</script>
